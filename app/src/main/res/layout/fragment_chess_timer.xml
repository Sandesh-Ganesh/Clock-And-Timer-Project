<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- ========== TOP PLAYER PANEL (mirrored) ========== -->
    <FrameLayout
        android:id="@+id/panelTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:background="#E6E6E6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/centerControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.45">

        <!-- Mirrored container -->
        <LinearLayout
            android:id="@+id/topMirroredContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="18dp"
            android:rotation="180">
            <!-- Moves counter mirrored -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTopMoves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="8dp"
                    android:text="Moves: 0"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>
            <!-- Player 1 label -->
            <TextView
                android:id="@+id/tvTopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Big timer -->
            <TextView
                android:id="@+id/tvTopTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="monospace"
                android:text="03:00"
                android:textColor="#333333"
                android:textSize="64sp"
                android:textStyle="bold" />

            <!-- Adjust + preset -->
            <LinearLayout
                android:id="@+id/topAdjustRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnTopAdjust"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Adjust Top"
                    app:srcCompat="@drawable/ic_sliders"
                    app:tint="#333333" />

                <TextView
                    android:id="@+id/tvTopPreset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:text="@string/default_time_placeholder" />

            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

    <!-- ========== CENTER CONTROLS ========== -->

    <!-- ========== BOTTOM PLAYER PANEL ========== -->
    <LinearLayout
        android:id="@+id/centerControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/panelBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panelTop">

        <!-- Reset -->
        <ImageButton
            android:id="@+id/btnReset"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Reset"
            android:src="@android:drawable/ic_popup_sync"
            app:tint="#333333" />

        <!-- Pause / Play -->
        <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Pause"
            android:src="@android:drawable/ic_media_play"
            app:tint="#333333" />

        <!-- Settings -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:src="@android:drawable/ic_menu_manage"
            app:tint="#333333" />

        <!-- Sound toggle -->
        <ImageButton
            android:id="@+id/btnSound"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Sound Toggle"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            app:tint="#333333" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/panelBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:background="#E6E6E6"
        app:layout_constraintTop_toBottomOf="@id/centerControls"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.45">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp">

            <!-- Moves counter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvBottomMoves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moves: 0"
                    android:gravity="end"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>

            <!-- Player 2 label -->
            <TextView
                android:id="@+id/tvBottomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="6dp"/>

            <!-- Big timer -->

            <!-- Adjust + preset -->
            <TextView
                android:id="@+id/tvBottomTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="monospace"
                android:text="03:00"
                android:textColor="#333333"
                android:textSize="64sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/bottomAdjustRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/btnBottomAdjust"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Adjust Bottom"
                    app:srcCompat="@drawable/ic_sliders"
                    app:tint="#333333" />

                <TextView
                    android:id="@+id/tvBottomPreset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:text="@string/default_time_placeholder" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
