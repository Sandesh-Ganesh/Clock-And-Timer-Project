<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kabaddi Timer Setup"
            android:textSize="28sp"
            android:textColor="@color/on_background"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Team A Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team A Name"
            app:boxBackgroundColor="@color/surface_dark"
            app:boxStrokeColor="@color/accent_orange"
            app:hintTextColor="@color/accent_orange"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_team_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/on_background"
                android:inputType="textCapWords" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Team B Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team B Name"
            app:boxBackgroundColor="@color/surface_dark"
            app:boxStrokeColor="@color/accent_orange"
            app:hintTextColor="@color/accent_orange"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_team_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/on_background"
                android:inputType="textCapWords" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Total Match Time -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Match Time (minutes)"
            app:boxBackgroundColor="@color/surface_dark"
            app:boxStrokeColor="@color/accent_orange"
            app:hintTextColor="@color/accent_orange"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_match_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/on_background"
                android:inputType="number"
                android:text="40" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Raid Time -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Raid Time (seconds)"
            app:boxBackgroundColor="@color/surface_dark"
            app:boxStrokeColor="@color/accent_orange"
            app:hintTextColor="@color/accent_orange"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_raid_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/on_background"
                android:inputType="number"
                android:text="30" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- First Team to Raid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Team to Raid"
            android:textSize="16sp"
            android:textColor="@color/on_background"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/rg_first_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <RadioButton
                android:id="@+id/rb_team_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textColor="@color/on_background"
                android:buttonTint="@color/accent_orange"
                android:checked="true"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/rb_team_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textColor="@color/on_background"
                android:buttonTint="@color/accent_orange"
                android:padding="12dp" />

        </RadioGroup>

        <!-- Start Match Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_match"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Start Match"
            android:textSize="18sp"
            android:textColor="@color/background_dark"
            app:backgroundTint="@color/accent_orange"
            app:cornerRadius="8dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>