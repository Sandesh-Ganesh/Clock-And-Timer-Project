<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_background"
    tools:context=".SettingsFragment">

    <RelativeLayout
        android:id="@+id/setting_time_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_time_format_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Format (12/24 Hr)"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_time_format_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_time_format_title"
            android:layout_marginTop="2dp"
            android:text="Currently set to 12-hour format"
            android:textColor="@color/light_gray"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/card_background" />

    <RelativeLayout
        android:id="@+id/setting_reset_world_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/setting_reset_world_clock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset World Clock"
            android:textColor="@color/red_500"
            android:textSize="16sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_reset_world_clock_title"
            android:layout_marginTop="2dp"
            android:text="Removes all added world clocks"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            tools:ignore="UnknownId" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setting_delete_all_alarms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/setting_delete_all_alarms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete All Alarms"
            android:textColor="@color/red_500"
            android:textSize="16sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/setting_delete_all_alarms_title"
            android:layout_marginTop="2dp"
            android:text="Permanently remove all saved alarms"
            android:textColor="@color/light_gray"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>