<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- WORLD CLOCK CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/dark_background"
            app:strokeColor="@color/card_background"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Card Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="World Clock"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- Time Format -->
                <RelativeLayout
                    android:id="@+id/setting_time_format"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/text_time_format_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Format (12/24 Hr)"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:id="@+id/text_time_format_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_time_format_title"
                        android:layout_marginTop="2dp"
                        android:text="Currently set to 12-hour format"
                        android:textColor="@color/light_gray"
                        android:textSize="12sp"/>
                </RelativeLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/card_background"/>

                <!-- Reset World Clock -->
                <RelativeLayout
                    android:id="@+id/setting_reset_world_clock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/setting_reset_world_clock_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset World Clock"
                        android:textColor="@color/red_500"
                        android:textSize="16sp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_reset_world_clock_title"
                        android:layout_marginTop="2dp"
                        android:text="Removes all added world clocks"
                        android:textColor="@color/light_gray"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ALARM CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/dark_background"
            app:strokeColor="@color/card_background"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Card Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarm"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- Delete All Alarms -->
                <RelativeLayout
                    android:id="@+id/setting_delete_all_alarms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/setting_delete_all_alarms_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete All Alarms"
                        android:textColor="@color/red_500"
                        android:textSize="16sp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_delete_all_alarms_title"
                        android:layout_marginTop="2dp"
                        android:text="Permanently remove all saved alarms"
                        android:textColor="@color/light_gray"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- APP SETTINGS CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/dark_background"
            app:strokeColor="@color/card_background"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Card Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Settings"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- Reset App Data -->
                <RelativeLayout
                    android:id="@+id/setting_reset_app_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/setting_reset_app_data_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset App Data"
                        android:textColor="@color/red_500"
                        android:textSize="16sp"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/setting_reset_app_data_title"
                        android:layout_marginTop="2dp"
                        android:text="Deletes all saved clocks, alarms, and settings"
                        android:textColor="@color/light_gray"
                        android:textSize="12sp"/>
                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
