        <!--            android:layout_height="wrap_content"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:gravity="center"-->
        <!--            android:paddingTop="8dp">-->

        <!--            <TextView-->
        <!--                android:id="@+id/tv_team_a_score"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="15"-->
        <!--                android:textSize="32sp"-->
        <!--                android:textColor="@color/team_a_score_color"-->
        <!--                android:textStyle="bold"-->
        <!--                android:layout_marginEnd="32dp"/>-->

        <!--            <TextView-->
        <!--                android:id="@+id/tv_team_b_score"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="12"-->
        <!--                android:textSize="32sp"-->
        <!--                android:textColor="@color/team_b_score_color"-->
        <!--                android:textStyle="bold"-->
        <!--                android:layout_marginStart="32dp"/>-->
        <!--        </LinearLayout>-->
    </LinearLayout>

    <!-- Raid Panels Container (Content unchanged) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Team A Raid Panel -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/surface_dark"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/panel_team_a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_team_a_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/primary_blue"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="TEAM\nA"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/tv_team_a_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="00:30"
                        android:textColor="@color/text_primary"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                    <!--android:visibility="none"-->
                    <TextView
                        android:id="@+id/tv_team_a_timeout_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timeouts Left: 2"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_team_a_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click to Start"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Team B Raid Panel -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/surface_dark"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:id="@+id/panel_team_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_team_b_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/inactive_kabaddi"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="TEAM\nB"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/tv_team_b_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="00:30"
                        android:textColor="@color/text_primary"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                    <!--android:visibility="none"-->
                    <TextView
                        android:id="@+id/tv_team_b_timeout_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timeouts Left: 2"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/tv_team_b_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click to Start"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- STATE OVERLAY CONTAINER (Content unchanged) -->
    <FrameLayout
        android:id="@+id/fl_overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true"
        android:focusable="true"
        android:translationZ="10dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/timeout_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner_red"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:text="Timeout"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_timeout_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:text="00:30"
                android:textColor="@color/text_primary"
                android:textSize="48sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <!--    android:background="@color/surface_secondary"-->
    <!-- Control Buttons (NOW USING MaterialButton) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/background_dark"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="4dp"
        android:layout_marginTop="20dp"
        >

        <!-- Pause/Start Button (Icon-only, centered, max size) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pause"
            style="@style/Widget.Material3.Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/surface_secondary"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:cornerRadius="120dp"
            app:icon="@drawable/ic_pause"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="64dp"
            app:iconTint="@color/text_primary"
            android:layout_marginEnd="10dp"/>


        <!-- Reset Button -->

        <!-- Timeout Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reset"
            style="@style/Widget.Material3.Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/surface_secondary"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:textColor="@color/text_primary"
            app:cornerRadius="120dp"
            app:icon="@drawable/ic_reset"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="64dp"
            app:iconTint="@color/text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_timeout"
            style="@style/Widget.Material3.Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="4dp"
            android:backgroundTint="@color/surface_secondary"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:textColor="@color/text_primary"
            app:cornerRadius="120dp"
            app:icon="@drawable/ic_stopwatch"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="64dp"
            app:iconTint="@color/text_primary"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

</LinearLayout>
