<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Select Team for Timeout"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/rg_timeout_teams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rb_team_a"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[Team A Name] Timeout"
                android:textColor="@color/primary_blue"
                app:strokeColor="@color/primary_blue"
                app:cornerRadius="8dp" />

            <TextView
                android:id="@+id/tv_timeout_a_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="12dp"
                android:text="Available: 2"
                android:textColor="@color/white"
                android:textSize="12sp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/rb_team_b"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[Team B Name] Timeout"
                android:textColor="@color/primary_blue"
                app:strokeColor="@color/primary_blue"
                app:cornerRadius="8dp" />

            <TextView
                android:id="@+id/tv_timeout_b_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="16dp"
                android:text="Available: 2"
                android:textColor="@color/white"
                android:textSize="12sp"/>

        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_timeout"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start 30s Timeout"
            android:enabled="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary_blue"
            app:cornerRadius="8dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/btn_cancel_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Cancel"
            android:textColor="@color/light_gray"
            android:textSize="14sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>