<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme -->
    <style name="Theme.ClockAndTimerApp" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Primary / Accent Colors -->
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorPrimaryDark">@color/accent_blue</item>
        <item name="colorAccent">@color/accent_blue</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- System Bars -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>

    <!-- Bottom Navigation Text Active -->
    <style name="BottomNavTextActive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/accent_blue</item>
    </style>

    <!-- Bottom Navigation Text Inactive -->
    <style name="BottomNavTextInactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

</resources>

