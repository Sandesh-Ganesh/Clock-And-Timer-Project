<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.FAB.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AlertDialogDarkTheme" parent="Theme.MaterialComponents.Dialog.Alert">

        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorAccent">@color/primary_blue</item>
        <item name="android:colorAccent">@color/primary_blue</item>

        <item name="buttonBarPositiveButtonStyle">@style/DestructivePositiveButtonStyle</item>

        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleWhite</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyleWhite</item>
    </style>

    <style name="DestructivePositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="NegativeButtonStyleWhite" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogButtonPrimaryColor" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.DialogButtonPrimary</item>
    </style>
    <style name="TextAppearance.DialogButtonPrimary" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="CustomCardDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:colorBackground">@color/background</item>
    </style>
    <style name="ChessCustomDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="AlarmTitleText" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.ClockDark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/app_bg</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@color/app_bg</item>
        <item name="android:navigationBarColor">@color/app_bg</item>
        <item name="android:windowBackground">@color/app_bg</item>
    </style>
    <style name="TimePickerTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/accent_blue</item>
        <item name="colorPrimary">@color/accent_blue</item>

        <item name="android:textColorPrimary">@color/on_background</item>

        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    <style name="NumberPickerTextColor">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="Widget.App.FAB.Circle" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>